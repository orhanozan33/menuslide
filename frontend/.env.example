# Supabase Configuration (veri + yüklemeler; USE_LOCAL_DB yoksa bunlar kullanılır)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
# Sayfa yüklenince tabloları otomatik oluşturmak için: Supabase Dashboard → Settings → Database → Database password
# SUPABASE_DB_PASSWORD=your_database_password

# Yerel DB modu: Frontend yerel PostgreSQL kullanır, her yazma aynı anda Supabase'e push edilir
# USE_LOCAL_DB=true
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=tvproje
# DB_USER=postgres
# DB_PASSWORD=your_local_db_password

# JWT (auth token) - Render kullanmıyorsanız Vercel'de tanımlayın (backend ile aynı secret)
JWT_SECRET=your_jwt_secret_min_32_chars

# Backend API: Boş bırakırsanız tüm istekler /api/proxy (Vercel) üzerinden gider (Render gerekmez)
# Dolu ise: Render URL (sonda / yok)
# Harici backend yok; API /api/proxy (Supabase). NEXT_PUBLIC_API_URL kullanılmıyor.
# Canlı frontend adresi (linkler, base URL)
NEXT_PUBLIC_APP_URL=https://menuslide.com

# Stripe: Test pk_test_... | Live pk_live_... (must match backend mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
# Stripe server (Vercel API routes - abonelik/webhook için)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Polotno Design Editor (get key at https://polotno.com/cabinet/)
NEXT_PUBLIC_POLOTNO_KEY=your_polotno_api_key

# GrapesJS Tasarım Editörü - açık lisans anahtarı (isteğe bağlı)
NEXT_PUBLIC_GRAPESJS_LICENSE_KEY=

# APK indirme: Supabase Storage kullanılır (bucket: menuslide, path: downloads/Menuslide.apk).
# Ayarlar > Android TV > "APK'yı depolamaya yükle" ile yüklenir; ek token gerekmez.

# ScreenshotOne API (Vercel'de otomatik slide oluşturma - Puppeteer yerine)
# https://screenshotone.com - ücretsiz 100/ay. Vercel env'e ekleyin.
# SCREENSHOTONE_ACCESS_KEY=your_access_key

# DigitalOcean Spaces (slide görselleri)
# DO Control Panel → Spaces → Access Keys ile oluştur.
DO_SPACES_KEY=your_spaces_access_key_id
DO_SPACES_SECRET=your_spaces_secret_key
DO_SPACES_BUCKET=menuslide-signage
DO_SPACES_REGION=tor1
