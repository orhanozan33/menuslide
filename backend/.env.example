# Database (optional: use DATABASE_URL for Supabase pooler)
# DATABASE_URL=postgresql://user:pass@host:6543/postgres  # Use port 6543 for pooler
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tvproje
DB_USER=postgres
DB_PASSWORD=333333
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=10000

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT: Giriş token'ı imzası (en az 32 karakter; production'da güçlü rastgele: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_min_32_chars_change_in_production

# CORS: Frontend adresi (Vercel canlı = https://menuslide.com, sonda / yok)
CORS_ORIGIN=https://menuslide.com

# Stripe Configuration
# Test: sk_test_... / pk_test_...  |  Live: sk_live_... / pk_live_...
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Admin: E-posta bildirimleri için (ödeme başarısız olduğunda log'da gösterilir)
ADMIN_EMAIL=admin@example.com

# Stripe Price IDs (optional; plan fiyatları DB'den veya price_data ile kullanılır)
# Test: Stripe Dashboard > Test mode > Products  |  Live: Dashboard > Live > Products
STRIPE_PRICE_BASIC_MONTHLY=price_xxx
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_xxx
