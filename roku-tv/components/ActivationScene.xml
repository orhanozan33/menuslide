<?xml version="1.0" encoding="utf-8" ?>
<component name="ActivationScene" extends="Group">
  <script type="text/brightscript" uri="pkg:/components/ActivationScene.brs"/>
  <interface>
    <field id="transitionToMain" type="string" value="" alwaysNotify="true"/>
  </interface>
  <children>
    <Rectangle
      id="bg"
      width="1920"
      height="1080"
      color="0x000000FF"/>
    <Label
      id="title"
      translation="[400, 280]"
      width="1120"
      height="80"
      text="MenuSlide Digital Signage"
      horizAlign="center"
      font="font:LargeBoldSystemFont"/>
    <Label
      id="hint"
      translation="[400, 400]"
      width="1120"
      height="48"
      text="Press OK to enter display code (5 digits)"
      horizAlign="center"
      font="font:MediumBoldSystemFont"
      color="0xAAAAAAFF"/>
    <Label
      id="error"
      translation="[400, 880]"
      width="1120"
      height="40"
      text=""
      horizAlign="center"
      font="font:SmallSystemFont"
      color="0xFF4444FF"
      visible="false"/>
  </children>
</component>
