<?xml version="1.0" encoding="utf-8"?>
<component name="ContentGroup" extends="Group" focusable="true">
  <script type="text/brightscript" uri="pkg:/components/ContentGroup.brs"/>
  <interface>
    <field name="exitRequested" type="boolean" value="false"/>
    <field name="registerresult" type="assocarray" alwaysNotify="true"/>
  </interface>
  <children>
    <Poster
      uri="pkg:/images/background.png"
      width="1920"
      height="1080"
      loadDisplayMode="scaleToFill"/>
    <Label
      translation="[24, 12]"
      width="400"
      height="32"
      text="Build 21 - Sideload"
      font="font:SmallSystemFont"
      color="0x888888FF"/>
    <Group translation="[760, 340]">
      <Rectangle width="400" height="400" color="0x2a2a2aFF"/>
      <Label
        id="codeLabel"
        translation="[40, 80]"
        width="320"
        height="56"
        text="Code"
        horizAlign="center"
        vertAlign="center"
        font="font:MediumBoldSystemFont"
        color="0xFFFFFFFF"/>
      <Label
        id="hintLabel"
        translation="[20, 150]"
        width="360"
        height="80"
        text="OK = type code. Back = save. Right then OK on Enter = submit."
        horizAlign="center"
        font="font:SmallSystemFont"
        color="0x888888FF"/>
      <Label
        id="enterLabel"
        translation="[100, 260]"
        width="200"
        height="48"
        text="Enter"
        horizAlign="center"
        vertAlign="center"
        font="font:LargeBoldSystemFont"
        color="0x666666FF"/>
    </Group>
  </children>
</component>
